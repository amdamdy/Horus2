<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:gravity="bottom"
              xmlns:android="http://schemas.android.com/apk/res/android">
<com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/top_navigation_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayLight"
        android:elevation="8dp"
        android:padding="12dp"
        app:bnc_mode="packed"
        android:orientation="horizontal"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/item_hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="@color/timeline"
            app:bt_colorInactive="@color/white"
            app:bt_icon="@drawable/hotel"
            app:bt_shape="@drawable/transition_background_drawable"
            app:bt_title="Hotels"
    android:elevation="10dp"/>

    <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/item_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/timeline"
            app:bt_colorInactive="@color/white"
            app:bt_icon="@drawable/restaurant"
            app:bt_shape="@drawable/transition_background_drawable"
            app:bt_title="Restaurants"
    android:elevation="10dp"/>

    <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/car_rental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/timeline"
            app:bt_colorInactive="@color/white"
            app:bt_icon="@drawable/car_rental"
            android:elevation="10dp"
            app:bt_shape="@drawable/transition_background_drawable"
            app:bt_title="Car Rental" />

    <!-- Add more child items here - max upto 5 -->

</com.gauravk.bubblenavigation.BubbleNavigationLinearView>
</LinearLayout>